<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sitBern2018.controller.View1">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>sitBernTitle}" showSubHeader="false">
				<!--
				We have some comments here
				
				we need to set email to xyz - otherwise there will could be a problem in the submit of the form
				
				And a lot of not required comments etc.
				-->
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="{i18n>label_cont_1}" id="container0">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="{i18n>label_cont_2}" id="element0">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="input0"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="Send" press="doSubmit"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>